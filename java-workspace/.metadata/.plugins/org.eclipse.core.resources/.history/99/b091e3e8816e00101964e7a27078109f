package com.kh.operator;

import java.util.Scanner;

public class F_Logical {
	/*
	 * 논리 연산자 : 두 개의 논리값을 연산하는 연산자
	 * 
	 * [표현법]
	 * 
	 * 논리값 논리연산자 논리값 => 결과값도 논리값
	 * 
	 * 종류
	 * 
	 * 1. AND연산자 : 논리값 && 논리값
	 * 좌항과 우항의 값이 모두 true여야만 최종 결과값이 true
	 * 
	 * 2. OR연산자 : 논리값 || 논리값
	 * 좌항과 우항의 값 중 하나라도 true일 경우 최종 결과값이 true
	 */
	
	// AND
	public void method1() {
		System.out.println("rrr");
		
		// 계획
		// 사용자에게 정수값을 하나 입력받은 후 
		// 사용자가 입력한 정수 값이 0보다 크면서 짝수인지 판별
		// 그리고 나서 결과를 출력
		
		// 1.
		Scanner sc = new Scanner(System.in);
		
		System.out.println("정수 값을 입력해주세요 > ");
		
		int number = sc.nextInt(); 
		
		System.out.println("잘 나오나 ?? : " + number);
		
		//2.
		// 무슨 연산?
		// 0 보다 큰가? (대소비교) number > 0
		// 2로 나눈 나머지가 0과 일치하는가? (동등비교) number % 2 == 0
	
		
		// AND 연산자
		// &&의 의미 : 그리고 , ~~이면서, ~~이고
		//(number > 0) && (number % 2 == 0)
		
		boolean result = (number > 0) && (number % 2 == 0);
						// 1.사용자가 입력한 정수가 0 보다 크다 
						// 2.그리고 사용자가 입력한 정수를 2로 나눴을 때 나머지가 0 인가요?
		System.out.print("입력값이 0보다 크면서 짝수인가요? : " + result);
		
		
	}
	
	public void method2() {
		
		// 사용자에게 정수 값을 입력받아서
		
		// 변수에 대입해주세요.
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("1부터 100사이의 숫자를 입력해주세요. >");
		
		int number = sc.nextInt();
		
		// 사용자가 입력한 정수가 1~100 사이의 값인지 확인하기
		// 1. 사용자가 입력한 정수 == number
		// 2. 비교 할 값 1
		// 3. 비교 할 값 100
		
		// 1 <= 사용자가 입력한 값 <= 100
		// 1 <= number <= 100
		// 2_1. (0 < number) && (number < 101)
		// 2_2. (100 > number) && (1 <= number)
		// 2_3. (1 <= number) && (number <= 100) **일반적으로 더 선호함.(알아보기 쉬움)
		
		// 사용자가 입력한 값이 1~100 사이의 값인지 판별하여 출력할 줄 것.
		boolean result = (1 <= number) && (100 <= number);
		System.out.println("1과 100 사이의 값입니까? : " + result );
		
		System.out.println("사용자 입력 값 : " + number);
		
	}
	
	//OR
	public void method3() {
		
		// 사용자에게 한 글자를 입력 받아서
		// 입력받은 값이 'A' 또는 'a' 인지 확인해서 출력하기
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("한 글자만 입력해주세요. >");
		
		char letter = sc.nextLine().charAt(0);
		System.out.println(letter);
		/*
		 * index : 0부터 시작한다.
		 * String str = "KH정보교육원"; // index에 문자 나열대로 배열
		 * char ch = str.charAt(2); // index 2번에 정이라는 문자를 빼오기
		 * System.out.println(ch); // 정
		 * 
		*/
		
		// 무슨 값?
		// 1_1. 사용자가 입력한 한 글자 == letter
		// 1_2. 'A'
		// 1_3. 'a'
		
		// 무슨 연산?
		// == 동등비교 연산
		// 단일 문자의 경우 동등비교 연산이 가능한가?
		// 가능하다! ==> 왜??
		// char 형이 int 형으로 자동형변환이 일어난 뒤 연산을 함
		
		boolean result = (letter == 'a') || (letter == 'A');
		// || : ~~~이거나, 또는
		System.out.println("사용자가 입력한 값이 'A' 또는 'a'인가요? > " + result);
		

	}
	
	/*
	 * AND(&&) : 두 개의 조건이 모두 true 일 경우 true
	 * 
	 * true && true : true
	 * true && false : false
	 * true && true : false
	 * false && false : false
	 * 
	 * OR(||) : 두 개의 조건 중 하나라도 true 일 경우 true
	 * true || true : true
	 * true || false : true
	 * false || true : true
	 * false || false : false 
	 * 
	 */
	
	public void tip() {
		System.out.println("33");
		
		int num = 10;
		
		boolean result = false && (num > 0);
		boolean result2 = (num < 0)
		
		
	}
	
}
